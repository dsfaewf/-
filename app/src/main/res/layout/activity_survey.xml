<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 가장 기억에 남는 어린시절 기억 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please describe your most memorable childhood memory." />
        <EditText
            android:id="@+id/editTextChildhoodMemory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine" />

        <!-- 가장 좋아하던 과목 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What was your favorite school subject?" />
        <EditText
            android:id="@+id/editTextFavoriteSubject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- 현재 취미-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What is your current hobby?" />
        <EditText
            android:id="@+id/editTextHobby"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- 가장 기억에 남는 여행 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please describe your most memorable trip." />
        <EditText
            android:id="@+id/editTextMemorableTrip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine" />

        <!-- 어린 시절 꿈 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What was your childhood dream?" />
        <EditText
            android:id="@+id/editTextChildhoodDream"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- 가장 자랑스러운 순간 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please describe your proudest moment in life." />
        <EditText
            android:id="@+id/editTextProudestMoment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine" />

        <!-- 제출 -->
        <Button
            android:id="@+id/submitBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Submit" />

    </LinearLayout>
</ScrollView>
